<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvAcaoTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Ação: [Nome da Ação]"/>

        <TextView
            android:id="@+id/tvAcaoDescricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:text="Descrição: [Descrição da Ação]"/>

        <TextView
            android:id="@+id/tvAcaoDataInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:text="Início: [Data de Início]"/>

        <TextView
            android:id="@+id/tvAcaoDataTermino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:text="Término: [Data de Término]"/>

        <TextView
            android:id="@+id/tvAcaoResponsavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:text="Responsável: [Nome do Responsável]"/>

        <TextView
            android:id="@+id/tvAcaoCriador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:text="Criador: [Nome do Criador]"/>

        <Button
            android:id="@+id/btnAprovarAcao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Aprovar Ação"
            android:backgroundTint="#055196"
            android:textColor="@android:color/white"
            android:layout_gravity="end"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>