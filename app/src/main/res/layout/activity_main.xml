<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewDaniel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daniel"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutBotoes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <LinearLayout
        android:id="@+id/linearLayoutBotoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDaniel">

        <Button
            android:id="@+id/cadastroPilar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastrar Pilar" />

        <Button
            android:id="@+id/cadastroSubPilar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastrar Subpilar" />

        <Button
            android:id="@+id/cadastroAcao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastrar Ação" />

        <Button
            android:id="@+id/cadastroAtividade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastrar Atividade" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>